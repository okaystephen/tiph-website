<div class="content">
    <!-- Form -->
    <div class="content">
        <div class="cms-breadcrumbs text-uppercase pb-3">
            <a href="cms-donate">Donate</a> / Edit Donation Option
        </div>
        <div id="form-container" class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card cms-blog">
                        <div class="card-header">
                            <h5>Edit Donation Option:</h5>
                        </div>
                        <div class="card-body">
                            <h5 class="cms-font-text-error" id="donate-error">{{donateErrorMessage}}</h5>
                            <div class="form-group">
                                <label for="donate_type">Mode</label>
                                <select class="form-control" name="donate_type" id="donate_type">
                                    <option value="GCash" {{#equals donate_type "GCash"}}selected{{/equals}}>GCash</option>
                                    <option value="Paymaya"{{#equals donate_type "PayMaya"}}selected{{/equals}}>PayMaya</option>
                                    <option value="BPI"{{#equals donate_type "BPI"}}selected{{/equals}}>BPI</option>
                                    <option value="BDO"{{#equals donate_type "BDO"}}selected{{/equals}}>BDO</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="donate_name">Account Name</label>
                                <input type="text" class="form-control" name="donate_name" id="donate_name"
                                    value="{{donate_name}}">
                            </div>
                            <div class="form-group">
                                <label for="donate_number">Account Number</label>
                                <input type="text" class="form-control" name="donate_number" id="donate_number"
                                    value="{{donate_number}}">
                            </div>
                            <div class="form-group text-center">
                                <button type="submit" class="btn btn-outline-success">SAVE</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>