<div class="content">
    <div class="cms-breadcrumbs text-uppercase pb-3">
        <a href="cms-applicant-pre-overview">Manage Applicants</a> / <a href="cms-applicant-pre">All Pre-Application
            Applicants</a> / Profile
    </div>
    <div class="row">
        <div class="col-md-12">
            <form method="POST">
                <div class="card">
                    <div class="card-header">
                        {{!-- Applicant Name should be changed --}}
                        <h4 class="card-title">{{this.pre_firstname}} {{this.pre_lastname}} Pre-Application Details</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive text-center">
                            <table class="table text-left">
                                <thead class="text-primary">
                                    <th>
                                        Personal Information
                                    </th>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>
                                            <b>Name: </b> {{this.pre_firstname}} {{this.pre_lastname}}
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <b>Age: </b> {{this.pre_age}}
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <b>School/Company: </b> {{this.pre_schoolcompany}}
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <b>Affilation with School/Company: </b> {{this.pre_affiliation}}
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <table class="table text-left">
                                <thead class="text-primary">
                                    <th>
                                        Contact Details
                                    </th>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>
                                            <b>Contact Number: </b> {{this.pre_number}}
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <b>Email Address: </b> {{this.pre_email}}
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <b>Facebook URL: </b> {{this.pre_facebook}}
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <b>Mode of Notification: </b> {{this.pre_notify}}
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <table class="table text-left">
                                <thead class="text-primary">
                                    <th>
                                        Comments
                                    </th>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>
                                            {{this.pre_comments}}
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <table class="table text-left">
                                <thead class="text-primary">
                                    {{#equals this.pre_status "Pending"}}
                                    <th>
                                        Do you accept or reject this pre-applicant?
                                    </th>
                                    <th>
                                        Do you want to delete this application?
                                    </th>
                                    <tr>
                                        <td>
                                            <a href="/cms-applicant-pre/accept?id={{this.pre_id}}">
                                                <button id="{{this.pre_id}}" type="button" class="btn btn-outline-success">
                                                 Accept
                                                </button>
                                            </a>
                                            <a href="/cms-applicant-pre/reject?id={{this.pre_id}}">
                                                <button id="{{this.pre_id}}" type="button" class="btn btn-outline-danger">
                                                    Reject
                                                </button>
                                            </a>
                                        </td>
                                        <td>
                                            <a href="/cms-applicant-pre/delete?id={{this.pre_id}}">
                                                <button id="{{this.app_id}}" type="button" class="btn btn-outline-danger">
                                                    Delete
                                                </button>
                                            </a>
                                        </td>
                                    </tr>
                                    {{/equals}}
                                    {{#equals this.pre_status "Accepted"}}
                                        <th>
                                            Revert status of this pre-applicant
                                        </th>
                                        <th>
                                            Do you want to delete this application?
                                        </th>
                                        <tr>
                                            <td>
                                                <a href="/cms-applicant-pre/pending?id={{this.pre_id}}">
                                                    <button id="{{this.pre_id}}" type="button" class="btn btn-outline-info">
                                                    Pending
                                                    </button>
                                                </a>
                                            </td>
                                            <td>
                                                <a href="/cms-applicant-pre/delete?id={{this.pre_id}}">
                                                    <button id="{{this.app_id}}" type="button" class="btn btn-outline-danger">
                                                        Delete
                                                    </button>
                                                </a>
                                            </td>
                                        </tr>
                                    {{/equals}}
                                    {{#equals this.pre_status "Rejected"}}
                                        <th>
                                            Revert status of this pre-applicant
                                        </th>
                                        <th>
                                            Do you want to delete this application?
                                        </th>
                                        <tr>
                                            <td>
                                                <a href="/cms-applicant-pre/pending?id={{this.pre_id}}">
                                                    <button id="{{this.pre_id}}" type="button" class="btn btn-outline-info">
                                                    Pending
                                                    </button>
                                                </a>
                                            </td>
                                            <td>
                                                <a href="/cms-applicant-pre/delete?id={{this.pre_id}}">
                                                    <button id="{{this.app_id}}" type="button" class="btn btn-outline-danger">
                                                        Delete
                                                    </button>
                                                </a>
                                            </td>
                                        </tr>
                                    {{/equals}}
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>